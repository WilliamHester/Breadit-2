<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="BottomMenuBarStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">

    </style>

    <style name="BaseText">
        <item name="android:textSize">@dimen/body_text</item>
    </style>

    <style name="SecondaryText" parent="BaseText">
        <item name="android:textColor">@color/secondaryText</item>
    </style>

    <style name="InfoText" parent="BaseText">
        <item name="android:textColor">@color/infoText</item>
    </style>

    <style name="PrimaryText" parent="BaseText">
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="TitleText" parent="PrimaryText">
        <item name="android:textSize">@dimen/title_text</item>
    </style>

</resources>
