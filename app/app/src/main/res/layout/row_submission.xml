<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/standard_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SecondaryText"
            android:layout_alignParentStart="true"
            android:maxLines="1"
            tools:text="1234 points"/>

        <TextView android:id="@+id/nsfw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SecondaryText"
            android:textColor="@color/nsfw"
            android:layout_alignParentEnd="true"
            android:maxLines="1"
            android:text="@string/nsfw"/>

    </RelativeLayout>

    <TextView android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TitleText"
        tools:text="This is some test text"/>

    <TextView android:id="@+id/metadata_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/InfoText"
        tools:text="Shockwave_ • /r/androiddev • self.androiddev"/>

    <TextView android:id="@+id/metadata_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/SecondaryText"
        tools:text="12345 comments 8 hours ago"/>

</LinearLayout>
